{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "analyze": {
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["PROD_HOST"],
      "outputs": ["dist/**", "build/**"]
    },
    "build:local": {
      "dependsOn": ["^build:local"],
      "outputs": ["dist/**", "build/**"]
    },
    "serve:local": {
      "persistent": true
    },
    "start": { "persistent": true },
    "lint": {},
    "lint:fix": {},
    "format": {},
    "test": {},
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
